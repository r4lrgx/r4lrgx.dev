{
 "compilerOptions": {
  "target": "ESNext",
  "module": "ESNext",
  "moduleResolution": "Bundler",
  "allowJs": true,
  "lib": ["DOM", "DOM.Iterable", "ESNext"],
  "strict": false,
  "strictNullChecks": true,
  "forceConsistentCasingInFileNames": true,
  "skipLibCheck": true,
  "esModuleInterop": true,
  "resolveJsonModule": true,
  "isolatedModules": true,
  "noEmit": true,
  "incremental": true,
  "baseUrl": ".",
  "paths": {
   "@/*": ["./*"]
  }
 },
 "include": ["**/*.ts"],
 "exclude": ["node_modules"]
}
